# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=5000

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?appName=Cluster

# Frontend URL
CLIENT_URL=http://localhost:5174

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d
COOKIE_DOMAIN=

# Email Service (Nodemailer with Gmail)
EMAIL_USER=your-gmail-address@gmail.com
EMAIL_PASS=your-gmail-app-password
OTP_EXPIRY_MINUTES=5

# Trusted Member Emails (4 friends)
TRUSTED_EMAIL_1=friend1@example.com
TRUSTED_EMAIL_2=friend2@example.com
TRUSTED_EMAIL_3=friend3@example.com
TRUSTED_EMAIL_4=friend4@example.com

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret